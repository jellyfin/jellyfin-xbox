<UserControl
    x:Class="Jellyfin.Controls.JellyfinWebView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:Jellyfin.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance viewModels:JellyfinWebViewModel}">
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="FadeOut">
            <VisualState>
                <Storyboard>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="DeprecationNoticeTransform"
                                                   Storyboard.TargetProperty="Y"
                                                   BeginTime="0:1:0"
                                                   EnableDependentAnimation="True">
                        <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="5" />
                        <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="5" />
                        <LinearDoubleKeyFrame KeyTime="0:0:0.6" Value="-120" />
                    </DoubleAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                                   Storyboard.TargetName="DeprecationNoticeGrid"
                                                   BeginTime="0:0:3">
                        <DiscreteObjectKeyFrame>
                            <DiscreteObjectKeyFrame.Value>
                                <Visibility>Collapsed</Visibility>
                            </DiscreteObjectKeyFrame.Value>
                        </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>
                <VisualState.StateTriggers>
                    <StateTrigger IsActive="{Binding DisplayDeprecationNotice, Mode=OneWay}" />
                </VisualState.StateTriggers>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <ContentPresenter HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Content="{Binding  WebView}">
            </ContentPresenter>
            <!-- WebView2 is created programatically otherwise it won't gain focus -->
            <Grid Grid.Row="0"
                  Background="{StaticResource OverlayColorBG}"
                  Visibility="{Binding IsInProgress, Converter={StaticResource BooleanVisibilityConverter}}">
                <ProgressRing Width="250" Height="250" IsActive="True" Visibility="Visible" />
            </Grid>
        </Grid>

        <Border
            Visibility="{Binding DisplayDeprecationNotice, Converter={StaticResource BooleanVisibilityConverter}}"
            Name="DeprecationNoticeGrid"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            BorderBrush="{StaticResource DangerColor}"
            BorderThickness="1"
            CornerRadius="32"
            Background="{StaticResource Color90}">
            <Border.RenderTransform>
                <TranslateTransform x:Name="DeprecationNoticeTransform"/>
            </Border.RenderTransform>
            <TextBlock HorizontalAlignment="Center"
                       Padding="8"
                       HorizontalTextAlignment="Center"
                       Foreground="{StaticResource DangerColor}">
                This version of jellyfin-for-xbox will soon be deprecated. <LineBreak />
                Please update the Jellyfin Server to 10.11 when its released. <LineBreak />
                Shortly after the official 10.11 release the next version of this client will not be compatible.
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
