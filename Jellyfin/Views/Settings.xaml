<UserControl
    x:Class="Jellyfin.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:Jellyfin.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:Jellyfin.ViewModels" 
    xmlns:behaviors="using:Jellyfin.Behaviors" 
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    Background="{StaticResource Color0}"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}">

    <UserControl.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="CheckboxContentTemplate">
                <TextBlock Text="{Binding}"
                           Foreground="White"
                           FontSize="{StaticResource FontL}" />
            </DataTemplate>
            <Style TargetType="CheckBox">
                <Setter Property="ContentTemplate" Value="{StaticResource CheckboxContentTemplate}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{StaticResource Color0}">
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Background="{StaticResource Color10}">
                <Image
                    Source="/Assets/OnBoardingLogo.png"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    Height="80" />
            </Grid>
            <Grid VerticalAlignment="Top"
                  Grid.Row="1"
                  Margin="0,30,0,0"
                  HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid
                Grid.Row="0"
                HorizontalAlignment="Center">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <CheckBox
                    IsChecked="{Binding AutoRefreshRate}"
                    IsEnabled="{Binding HdmiDisplayInformation, Converter={StaticResource NullToBooleanInverseConverter}}"
                    Grid.Row="0"
                    Content="Set the display refresh rate to the media refresh rate">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:AutoFocusBehavior FocusOnEnable="True" />
                        </interactivity:Interaction.Behaviors>
                    </CheckBox>
                    <TextBlock Visibility="{Binding ElementName=checkBoxAutoRefreshRate, Path=IsEnabled, Converter={StaticResource BooleanVisibilityInverseConverter}}"
                           Grid.Row="1"
                           FontSize="{StaticResource FontM}"
                           Foreground="{StaticResource DangerColor}">
                    Auto display refresh rate is not supported on this device.
                    </TextBlock>

                    <CheckBox
                        IsChecked="{Binding AutoResolution}"
                        IsEnabled="{Binding HdmiDisplayInformation, Converter={StaticResource NullToBooleanInverseConverter}}"
                        Content="Set the display resolution to the media resolution"
                        Foreground="White" FontSize="{StaticResource FontL}"
                        Grid.Row="2" />
                    <TextBlock Visibility="{Binding ElementName=checkBoxAutoRefreshRate, Path=IsEnabled, Converter={StaticResource BooleanVisibilityInverseConverter}}"
                               Grid.Row="3"
                               FontSize="{StaticResource FontM}"
                               Foreground="{StaticResource DangerColor}">
                        Display resolution is not supported on this device.
                    </TextBlock>

                    <CheckBox
                        IsChecked="{Binding ForceEnableTvMode}"
                        Content="Force TV mode"
                        Foreground="White" FontSize="{StaticResource FontL}"
                        Grid.Row="4" />
                    <TextBlock Visibility="{Binding ElementName=checkBoxAutoRefreshRate, Path=IsEnabled, Converter={StaticResource BooleanVisibilityInverseConverter}}"
                               Grid.Row="5"
                               FontSize="{StaticResource FontM}"
                               Foreground="{StaticResource Color100}">
                        Overrides the device detection and sets it to "Xbox" to force the WebUI to operate in TV mode.
                    </TextBlock>
                </Grid>
                <Grid
                    HorizontalAlignment="Stretch"
                    Margin="0,30,0,0"
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button
                    Grid.Column="0"
                    Style="{StaticResource SecondaryButton}"
                    Content="Abort"
                    Margin="0,0,6,0"
                    Command="{Binding AbortCommand}"/>
                    <Button
                    Grid.Column="1"
                    Style="{StaticResource PrimaryButton}"
                    Margin="6,0,0,0"
                    Content="Save"
                    Command="{Binding SaveCommand}"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
